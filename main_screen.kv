<MainScreen>

    SelectButton:
        pos_hint: {"center_x": .25, "center_y": .85}
        icon: "alphabetical"
        id: select_0

    SelectButton:
        pos_hint: {"center_x": .5, "center_y": .85}
        icon: "shape-outline"
        id: select_1

    SelectButton:
        pos_hint: {"center_x": .75, "center_y": .85}
        icon: "translate-variant"
        id: select_2

    ABCOptions:
        id: abc_options
        pos_hint: {"center_x": -2}

    TranslationOptions:
        id: translation_options
        pos_hint: {"center_x": -2}

    CategoryOptions:
        id: category_options
        pos_hint: {"center_x": -2}

    MDRectangleFlatButton:
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        on_press: root.choose_screen( "random" )


<SelectButton@MDCard>:
    size_hint: None, None
    size: dp(100), dp(100)
    RelativeLayout:
        MDIcon:
            icon: root.icon
            font_size: dp(50)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            color: root.color
        Button:
            background_color: 0, 0, 0, 0
            on_press: root.select()
        MDLabel:
            text: root.icon

